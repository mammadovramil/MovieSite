@model MovieSite.Core.Model.MovieList

@{
    ViewData["Title"] = "Movie Site";
}

<div class="container">
    <div class="container">
        <div class="card-columns">
            @if (Model.Movies != null)
            {
                @foreach (var item in Model.Movies)
                {
                    <div class="card">
                        <a href="@Url.Action("Information", "Home", new { id = item.ImdbID })">
                            <img class="card-img-top" src="@item.Poster" alt="@item.Title">
                            <div class="card-body">
                                <h5 class="card-title">@item.Title</h5>
                                <p class="card-text">
                                    <small class="text-muted">@item.Year</small>
                                </p>
                            </div>
                        </a>
                    </div>
                }
            }
            else
            {
                <div class="alert alert-warning" role="alert">
                    Something went wrong! Check your OMDB API Key
                </div>
            }
        </div>
    </div>
</div>
